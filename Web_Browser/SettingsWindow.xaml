<Window x:Class="Web_Browser.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Web_Browser"
        mc:Ignorable="d"
        Title="Settings" Height="164" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="OnLoaded" ShowInTaskbar="False">
    <Grid>
        <StackPanel>
            <Label Content="Home" HorizontalAlignment="Left"/>
            <TextBox x:Name="HomeTextBox" Height="20" Margin="6,0,6,0"/>
            <Label Content="Search" HorizontalAlignment="Left"/>
            <TextBox x:Name="SearchTextBox" Height="20" Margin="6,0,6,0"/>
            <Button x:Name="SaveButton" Content="Save" Height="20" HorizontalAlignment="Right" Width="40" Margin="0,6,6,0" Click="SaveButtonOnClick" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
