<Window x:Class="Web_Browser.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Web_Browser"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="OnLoaded">
    <Grid>
        <Label Content="Home" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label Content="Search engine" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,70"/>
        <TextBox x:Name="SearchEngine" VerticalAlignment="Bottom" Height="20" Margin="10,0,10,40"/>
        <Button x:Name="SaveAndCloseButton" Content="Save &amp; Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="90" Margin="0,0,10,10" Click="SaveAndCloseButtonOnClick"/>
        <TextBox x:Name="HomePage" VerticalAlignment="Top" Margin="10,40,10,0" Height="20"/>

    </Grid>
</Window>
