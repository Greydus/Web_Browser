<Window x:Name="mainWindow" x:Class="Web_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Web_Browser"
        mc:Ignorable="d"
        Title="Web Browser" Height="600" Width="1024" Loaded="mainWindow_OnLoaded" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Button x:Name="bckBtn" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="bckBtn_OnClick"/>
        <Button x:Name="fwdBtn" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Click="fwdBtn_OnClick"/>
        <TextBox x:Name="uriAddrBox" Margin="60,10,82,0" Text="https://www.google.com/" VerticalAlignment="Top" Height="20" MaxLines="1"/>
        <Button x:Name="goBtn" Content="Go" HorizontalAlignment="Right" Margin="0,10,58,0" VerticalAlignment="Top" Click="goBtn_OnClick"/>
        <Button x:Name="refreshBtn" Content="Refresh" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Click="refreshBtn_OnClick"/>
        <WebBrowser x:Name="webBrowser" Grid.Row="1" Navigating="webBrowser_OnNavigating"/>
    </Grid>
</Window>
